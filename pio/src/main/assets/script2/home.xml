<?xml version="1.0" encoding="UTF-8" ?>
<resource dir="file:///android_asset/script" /> 
<items>
    <group title="Overview">
        <action reload="true" auto-off="true"> 
            <title>Project List</title>
            <param name="xm" options-sh="script/tool.sh check"/>
            <set>echo "$xm" > ${XBJ}</set>
            <summary sh="script/tool.sh zy" />
        </action>
    </group>

    <group title="Tools Menu">
        <action reload="true" auto-off="true">
            <title>Download ROM</title>
            <param name="jb" label="Unpack after download is complete" type="switch" />
            <param name="del" label="Delete source files after unpacking" type="switch" />
            <param name="romdz" label="Enter link" title="Enter link" placeholder="Please enter...." type="text" />
            <script>script/tool.sh download</script>
        </action>
        
        <action reload="true" auto-off="true"> 
            <title>Select ROM</title>
            <set>script/tool.sh UZ</set>
            <param name="del" label="Delete source files" type="switch" />
            <param name="xzrom" label="File Selection" type="file" suffix="zip" />
        </action>
     
        <action reload="true" auto-off="true"> 
            <title>Delete Project</title>
            <param multiple="true" name="xms" options-sh="script/tool.sh check"/>
            <set>script/tool.sh del</set>
        </action>
     
        <action reload="true" auto-off="true"> 
            <title>Create New Project</title>
            <param name="xmmc" label="Project Name" title="Enter project name" placeholder="Please enter project name (avoid using Chinese characters)" type="text" />
            <set>script/tool.sh mn</set>
        </action>  
          
        <page title="Project Menu" config="file:///android_asset/script2/mio.xml">
            <set>cd $SH_DIR</set>
            <lock>script/tool.sh unlock</lock>
        </page>
    </group>
</items>