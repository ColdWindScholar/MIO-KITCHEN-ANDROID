<?xml version="1.0" encoding="UTF-8" ?>
<page>
    <group>
    
        <!--html属性不支持省略file:///android_asset/前缀-->
        <page html="file:///android_asset/htmls/bugreport/index.html" title="Bug反馈" />
       
    </group>
    <group title="脚本执行器">
    <action>
        <title>脚本执行器</title>
        <summary>自定义命令</summary>
        <set>$TO</set>
        <param name="TO" placeholder="自定义命令" value="" requiret="true" />
    </action>
     </group>
     <group>
     <action>
        <title>刷入镜像文件</title>
        <set>script/tool.sh flash_img</set>
        <param name="CQ" label="刷入成功自动重启系统" type="checkbox" />
        <param name="CQ1" label="刷入成功自动重启至Recovery（恢复模式）" type="checkbox" />
        <param name="IMG" title="注：要刷入的镜像大小不能大于显示的大小，否则会刷入不了" options-sh="script/tool.sh parts" required="true"/>
        <param name="Brush_in" type="file" suffix="img" editable="true" required="true" title="可输入img文件绝对路径，也可以使用文件选择器选择文件" desc="路径最好不要带空格" required="true"/>
    </action>
    <action>
        <title>提取镜像文件</title>
        <set>script/tool.sh extract_part</set>
        <param name="IMG" title="请选择分区支持多选：" multiple="true" options-sh="script/tool.sh parts" required="true"/>
    </action>
     </group>
<group title="关于工具">
        <page title="特别鸣谢" config="file:///android_asset/script2/thank.xml" />
       <page html="file:///android_asset/htmls/index.html" title="交流反馈"/>
       </group>
       <group> 
        <text>
        <slices>
 <slice size="18" align="center" color="black">声明</slice>
 <slice break="true"></slice>
 <slice color="red" align="center" size="15">本工具所造成的一切风险需自行承担</slice>
            <slice break="true"></slice>
        </slices>
    </text>
</group>
</page>